{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run C++ with in/out files",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/code",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "preLaunchTask": "build-and-run",
      "setupCommands": [
        {
          "description": "Enable pretty printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "miDebuggerPath": "/usr/bin/gdb",
      "linux": {
        "command": "/bin/bash",
        "args": ["-c", "./code < in.txt > out.txt"]
      }
    }
  ]
}
